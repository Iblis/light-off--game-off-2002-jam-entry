.lightOffPopup {
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    background-color: rgba(70, 70, 70, 0.94);
    margin-top: 0;
    margin-bottom: 0;
    margin-left: 10px;
    padding-left: 10px;
    padding-top: 10px;
    padding-bottom: 10px;
}

.centeredPopup {
    transform-origin: center;
    width: 75%;
    translate: 20% 50%;
}
